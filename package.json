{
    "name": "template",
    "version": "1.0.0",
    "type": "module",
    "description": "A basic service template for Node.js",
    "main": "template.js",
    "scripts": {
        "start": "node template.js",
        "test": "npx --node-options=\"--experimental-vm-modules --no-warnings\" jest --detectOpenHandles --silent"
    },
    "keywords": [
        "template",
        "server",
        "node",
        "javascript"
    ],
    "author": "Russell Purinton <russell.purinton@gmail.com>",
    "repository": {
        "type": "git",
        "url": "https://github.com/rpurinton/template.git"
    },
    "bugs": {
        "url": "https://github.com/rpurinton/template/issues"
    },
    "license": "MIT",
    "dependencies": {
        "dotenv": "^16.5.0",
        "winston": "^3.17.0"
    },
    "devDependencies": {
        "jest": "^29.7.0"
    },
    "jest": {
        "testEnvironment": "node",
        "testMatch": [
            "**/?(*.)+(spec|test).[jt]s?(x)",
            "**/?(*.)+(spec|test).mjs"
        ]
    }
}
